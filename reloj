  <script>
    /* CONFIGURACIÓN: ajusta estos valores para cambiar la velocidad */
    const config = {
      // multiplicador respecto al movimiento real.
      // 1 = velocidad real; por ejemplo 60x hace que el minuto gire 60 veces más rápido.
      speedMultiplier: {
        hour: 120,    // ejemplo: la manecilla de hora gira 120 veces más rápido
        minute: 60,   // ejemplo: la manecilla de minuto gira 60 veces más rápido
        second: 12    // ejemplo: la manecilla de segundo gira 12 veces más rápido
      },
      // Periodos reales en segundos (no tocar normalmente):
      periods: {
        hour: 12 * 3600,   // 12 horas = 43200 s
        minute: 3600,      // 1 hora = 3600 s (trayecto completo de la manecilla de minutos)
        second: 60         // 60 s
      }
    };

    // Elementos
    const hourEl = document.getElementById('hourHand');
    const minuteEl = document.getElementById('minuteHand');
    const secondEl = document.getElementById('secondHand');

